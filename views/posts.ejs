<%- include("partials/_header") %>
   <!-- body -->

   <body style="background-color: #f5f5f5;">
      <div class="postsbody">
         <div class="postscontainer">
            <% if (userPhotoCount> 0) { %>
               <% photos.reverse().forEach(photo=> { %>
                  <% if (photo.user.equals(user._id)) { %>


                     <div class="postscard">

                        <div class="postscard-header">
                           <img class="postsuser-avatar" src="<%= photo.url %>" alt="User Avatar">
                           <div><a class="postsuser-name" href="/photos/<%= photo._id %>">
                                 <%= photo.uploadedBy%>
                              </a></div>
                        </div>
                        <img class="postscard-image" src="<%= photo.url %>" alt="Card Image">
                        <div class="postscard-description">

                           <%= photo.description %>

                        </div>

                     </div>


                     <% } %>
                        <% }); %>

                           <%} else { %>

                              <p style="width: 100%;
               color: crimson; font-family: sans-serif;
                font-size: 35px;
                text-align: center;
                font-weight: 900; text-transform: uppercase;">No photos to display</p>

                              <div class="postscard">

                                 <div class="postscard-header">
                                    <div><a class="postsuser-name">SULEYMAN KILINC</a></div>
                                 </div>
                                 <img class="postscard-image"
                                    src="https://res.cloudinary.com/dwcgw2rci/image/upload/v1693225719/lenslight_tr/anime-sad-gif-1_q5r3tx.gif"
                                    alt="Card Image">
                                 <div class="postscard-description">
                                    <p style="font-family: sans-serif;
                     font-size: 18px; color: #151515;">:((</p>
                                 </div>
                              </div>



                              <% } %>
         </div>











      </div>



      <script>

         const modalBtn = document.getElementById("modal-ac");
         const modal = document.querySelector(".modal");
         const modalKapat = document.getElementById("modal-kapat");

         modalBtn.addEventListener("click", () => {
            modal.style.display = "flex";
         });

         modalKapat.addEventListener("click", () => {
            modal.style.display = "none";
         });
      </script>

   </body>

   </html>