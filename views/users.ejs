<%- include("partials/_header") %>

   <!-- body -->

   <body>
      <!-- loader  -->
      <div class="loader_bg">
         <div class="loader"><img src="/images/loading3.gif" alt="#" /></div>
      </div>
      <!-- end loader -->

      <!-- header -->
      <%- include("partials/_menu") %>

         <!-- end header inner -->

         <div class="userscontainer">
            <div class="userspostsbody">
               <div class="postscontainer">
                  <!-- users.ejs -->
                  <% var registeredUsers=[]; users.forEach(user=> {
                     if (!registeredUsers.includes(user._id.toString())) {
                     registeredUsers.push(user._id.toString());
                     %>
                     <div class="user-card">
                        <div class="user-card-header">
                           <img class="user-avatar"
                              src="https://marketplace.canva.com/EAFfyNv3EC4/2/0/1600w/canva-orange-black-modern-facebook-profile-picture-17RW-gVJo5k.jpg"
                              alt="Profile Photo">
                           <div>
                              <a class="user-name" href="/users/<%= user._id %>">
                                 <%= user.username %>
                              </a>
                           </div>
                        </div>
                     </div>
                     <% } }); if (registeredUsers.length===0) { %>
                        <div style="display: flex; align-items: center; justify-content: center;">
                           <p style="width: 100%;
             color: crimson; font-family: sans-serif;
              font-size: 35px;
              text-align: center;
              font-weight: 900; text-transform: uppercase;">there is nobody except you</p>

                           <div class="postscard">

                              <div class="postscard-header">
                                 <div><a class="postsuser-name">SULEYMAN KILINC</a></div>
                              </div>
                              <img class="postscard-image"
                                 src="https://res.cloudinary.com/dwcgw2rci/image/upload/v1693225719/lenslight_tr/anime-sad-gif-1_q5r3tx.gif"
                                 alt="Card Image">
                              <div class="postscard-description">
                                 <p style="font-family: sans-serif;
                   font-size: 18px; color: #151515;">:((</p>
                              </div>
                           </div>

                        </div>
                        <% } %>
               </div>
            </div>
         </div>
         <!-- end users -->






         <!-- end footer -->
         <%- include("partials/_footer") %>